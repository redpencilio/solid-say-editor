<WuModal @title={{this.title}} @dialog-class="modal-dialog--wide modal-dialog--sectioned">
    <p>{{this.subtitle}}</p>
    <div class="modal-dialog__footer">

        {{#each-in this.forms as |id form| }}
        {{component this.formComponent form=form onChange=this.handleChange}}
        {{/each-in}}
            
    <WuButtonGroup>
        <WuButton @label="Save" class="button button--narrow" @onClick={{this.save}} disabled={{if this.errorCount true false}}/>
        <WuButton @label="Add Item" class="button button--narrow" @onClick={{this.addForm}}/>
        <WuButton @label="Cancel" class="button button--alt button--narrow" @onClick={{@onClose}}/>
    </WuButtonGroup>
  </div>
</WuModal>